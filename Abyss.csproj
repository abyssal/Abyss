<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <LangVersion>latest</LangVersion>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <Authors>abyssal512</Authors>
        <Company>abyssal512</Company>
        <Description>A friendly Discord bot</Description>
        <Copyright>Copyright (c) 2019 abyssal512</Copyright>
        <PackageProjectUrl>http://github.com/abyssal512/Abyss</PackageProjectUrl>
        <RepositoryUrl>http://github.com/abyssal512/Abyss</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="abyss.json" />
      <None Include="LICENSE.md">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Content Include="abyss.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="AbyssalSpotify" Version="1.0.0-20190610.1" />
        <PackageReference Include="Discord.Net.WebSocket" Version="2.0.2-dev-20190326.4" />
        <PackageReference Include="Humanizer.Core.uk" Version="2.5.16" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="2.10.0" />
        <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
        <PackageReference Include="NLog" Version="4.5.11" />
        <PackageReference Include="Qmmands" Version="3.0.0-nightly-00181" />
        <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-beta0005" />
    </ItemGroup>
    <ItemGroup>
        <None Update="nlog.config">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Assets\transparent_200x200.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Assets" />
      <Folder Include="Parsers\DiscordNet" />
    </ItemGroup>
</Project>
