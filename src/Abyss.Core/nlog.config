<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xsi:schemaLocation="" autoReload="true" internalLogFile="logs/internal.log" internalLogLevel="Trace">
  <targets>
    <target xsi:type="Console" name="Abyss-Console"
            layout="${longdate} | ${level:uppercase=true:padding=-4} | ${logger} | ${message} | ${exception:format=tostring} ${all-event-properties}" />
    <target xsi:type="File" name="Abyss-File"
            layout="[${longdate}] [${logger}/${level:uppercase=true}] ${message} ${exception} ${all-event-properties}"
            fileName="${basedir}/logs/Abyss.log" encoding="utf-8" />
    <target xsi:type="File" name="Abyss-Commands-Tracking"
            layout="${longdate} | ${level:uppercase=true:padding=-4} | ${logger} | ${message} | ${exception:format=tostring} ${all-event-properties}"
            fileName="${basedir}/logs/commands_tracking.log" encoding="utf-8" />
  </targets>
  <rules>
    <logger name="Successful Commands Tracking" writeTo="Abyss-Commands-Tracking" minlevel="Debug" />
    <logger name="Failed Commands Tracking" writeTo="Abyss-Commands-Tracking" minlevel="Debug" />
    <logger name="*" writeTo="Abyss-Console,Abyss-File" minlevel="Debug" />
  </rules>
</nlog>